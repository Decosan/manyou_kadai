<%= form_with(model: task,local: true)do |f| %>

  <div class="form">
    <%= f.label :title,'Title' %>
    <%= f.text_field :title,class:'form-control' %>
  </div>

  <div class="form">
    <%= f.label :content,'Content' %>
    <%= f.text_field :content,class:'form-control' %>
  </div>

  <%= f.submit "Create",class:'btn btn-primary btn-block' %>

<% end %>